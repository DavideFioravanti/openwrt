/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

#include "qca9557.dtsi"

/ {
	compatible = "sitecom,wlr8100", "qca,qca9557";
	model = "Sitecom WLR-8100";

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x8000000>;
	};

	extosc: ref {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-output-names = "ref";
		clock-frequency = <40000000>;
	};

	leds {
		compatible = "gpio-leds";
		
		ops_white {
			label = "wlr8100:white:ops";
			gpios = <&gpio 23 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		status_amber {
			label = "wlr8100:amber:status";
			gpios = <&gpio 18 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};

		wifi2g {
			label = "wlr8100:blue:wifi2g";
			gpios = <&gpio 19 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		wifi5g {
			label = "wlr8100:blue:wifi5g";
			gpios = <&gpio 17 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
	};

	keys {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;

		button@0 {
			label = "wps_2g";
			linux,code = <KEY_RESTART>;
			gpios = <&gpio 21 GPIO_ACTIVE_LOW>;
			debounce-interval = <60>;
		};
    
		button@1 {
			label = "wps_5g";
			linux,code = <KEY_WPS_BUTTON>;
			gpios = <&gpio 22 GPIO_ACTIVE_LOW>;
			debounce-interval = <60>;
		};
	};
  
};

&pcie0 {
	status = "okay";
};

&uart {
	status = "okay";
};

&pll {
	clocks = <&extosc>;
};

&spi {
	status = "okay";
	num-cs = <1>;

	flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "mx25l12805d";
		reg = <0>;
		spi-max-frequency = <25000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x000000 0x030000>;
				read-only;
			};

			factory: partition@1 {
				label = "u-boot-env";
				reg = <0x030000 0x010000>;
				read-only;
			};

			partition@2 {
				label = "firmware";
				reg = <0x040000 0xf10000>;
			};      

			partition@3 {
				label = "manufacture";
				reg = <0xf50000 0x040000>;
				read-only;
			};

			partition@4 {
				label = "backup";
				reg = <0xf90000 0x010000>;
				read-only;
			};

			partition@5 {
				label = "storage";
				reg = <0xfa0000 0x050000>;
				read-only;
			};
      
			partition@6 {
				label = "art";
				reg = <0xff0000 0x010000>;
				read-only;
			};
		};
	};
};

&mdio0 {
        status = "okay";

		phy0: ethernet-phy@0 {
			reg = <0>;
			phy-mode = "rgmii";

			qca,ar8327-initvals = <
				0x04 0x87600000 /* PORT0 PAD MODE CTRL */
				0x0c 0x01000080 /* PORT6 PAD MODE CTRL */
				0x10 0x40000000 /* Power-on Strapping: 176-pin interface configuration */
				0x50 0xc437c437 /* LED Control Register 0 */
				0x54 0xc337c337 /* LED Control Register 1 */
				0x58 0x00000000 /* LED Control Register 2 */
				0x5c 0x03ffff00 /* LED Control Register 3 */
				0x7c 0x0000007e /* PORT0_STATUS */
				0x94 0x0000007e /* PORT6 STATUS */
			>;
		};
};

&mdio1 {
  status = "okay";
		
  phy1: ethernet-phy@1 {
    reg = <1>;
    phy-mode = "sgmii";
  };
};

&eth0 {
	status = "okay";

	phy-handle = <&phy0>;
	phy-mode = "rgmii";
};

&eth1 {
	status = "okay";
  
	phy-mode = "sgmii";
	phy-handle = <&phy1>;

	fixed-link {
		speed = <1000>;
		full-duplex;
	};
  
};
